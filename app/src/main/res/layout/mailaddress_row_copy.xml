<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shgitemrel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemsCard"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:visibility="visible"
        android:elevation="50dp"
        app:cardCornerRadius="5dp"
        android:layout_height="100dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="2dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/itemsImage"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    app:cardCornerRadius="2dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/itemsImage1"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_gravity="top"
                android:gravity="top"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/geodetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Geo Details"
                    android:textColor="#000"
                    android:layout_alignParentTop="true"
                    android:textSize="15dp"
                    android:layout_gravity="top"
                    android:fontFamily="@font/sans"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Geo Details"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_gravity="top"
                    android:fontFamily="@font/sans"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_below="@id/geodetails"
                    android:layout_marginRight="5dp" />
                <TextView
                    android:id="@+id/commune"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Geo Details"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_gravity="top"
                    android:fontFamily="@font/sans"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_below="@id/description"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_below="@+id/commune"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/sans"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/itemsAdd"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        app:cardCornerRadius="5dp"
        android:background="@drawable/dotted"
        android:elevation="50dp"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/dotted">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_person_add_black_24dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:tint="@color/colorPrimary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
