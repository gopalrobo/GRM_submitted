<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLinear"
    android:layout_width="150dp"
    android:layout_height="220dp"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/itemsImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/itemsLocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_margin="5dp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/cricle_trans"
            android:src="@drawable/outline_location_on_white_24dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/geodetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geo Details"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:fontFamily="@font/sans_bold"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Details"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/sans_bold"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>